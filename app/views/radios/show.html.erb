<div class="container">
  <div>
    <h3><%= @radio.name %></h3>
  </div>
  <div class="radio-container" style="display: flex;">
    <div class="radio-container__img" style="width: 60%;">
      <% if @radio.img %>
        <%= image_tag(@radio.img, :alt => "img", :class => "card__img") %>
      <% end %>
    </div>
    <div class="radio-container__content">
      <div>
        出演者: 有吉
      </div>
      <div>
        url: <%= link_to @radio.url, @radio.url, target: "blank" %>
      </div>
    </div>
  </div>
</div>


