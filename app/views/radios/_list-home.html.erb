<% radios.each do |radio|%>
<div class="card pointer">
  <%= link_to radio_path(radio), class: "link-black" do %>
  
  <div class="card__img">
    <% if radio.img %>
    <%= image_tag(radio.img, :alt => "img", :class => "img") %>
    <% else %>
    <%= image_tag("no-img.png", :alt => "img", :class => "img") %>
    <% end %>
  </div>
  
  <div class="card__content">
    <h4 class="link-black"><%= radio.name %></h4>
    <% radio.speakers.each do |speaker| %>
    <p>出演者<strong class="card__content__name"><%= speaker.name %></strong></p>
    <% end %>
    <p>
      Draft <%= radio.drafts.count%>
    </p>
  </div>
  <div class="card__write-letter">
    <%= link_to "ハガキを書く", new_draft_path(radio), class: "btn link-white" %>
  </div>
  <% end %>
</div>
<% end %>